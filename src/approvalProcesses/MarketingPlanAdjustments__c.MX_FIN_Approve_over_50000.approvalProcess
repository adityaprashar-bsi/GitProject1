            </criteriaItems>
            <criteriaItems>
                <field>MarketingPlanAdjustments__c.Country_From__c</field>
                <operation>equals</operation>
                <value>MEX</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Approval from Juan Carlos</label>
        <name>Approval_from_Juan_Carlos</name>
    </approvalStep>
    <description>Marketing Plan Transfers over $50,000 need approved.</description>
    <emailTemplate>unfiled$public/Approval_Request_Sent_to_Approver</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>MarketingPlanAdjustments__c.Amount__c</field>
            <operation>greaterOrEqual</operation>
            <value>&quot;USD 50,000&quot;</value>
        </criteriaItems>
        <criteriaItems>
            <field>MarketingPlanAdjustments__c.Request_Status__c</field>
            <operation>notEqual</operation>
            <value>Rejected,Canceled,Approved,Failed</value>
        </criteriaItems>
        <criteriaItems>
            <field>MarketingPlanAdjustments__c.Country_From__c</field>
            <operation>equals</operation>
            <value>MEX</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Marketing_Plan_Transfer_Approval_Response_for_Mexico</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Request_Status_Approved</name>
