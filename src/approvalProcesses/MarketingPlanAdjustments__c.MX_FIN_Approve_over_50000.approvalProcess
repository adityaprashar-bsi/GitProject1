            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Approval required by Juan Carlos.</description>
        <entryCriteria>
            <criteriaItems>
                <field>MarketingPlanAdjustments__c.Amount__c</field>
